<ul>
<li>
<%= link_to_unless_current(t(:'pages.global'), backend_pages_path) %>
<%= tree_ul(@roots) do |page, list_options|
  if current_page?(backend_page_path(page))
    list_options[:class] = 'active-show'
  elsif current_page?(edit_backend_page_path(page))
    list_options[:class] = 'active-edit'
  end
  link_to_unless_current(h(page.title), backend_page_path(page))
end %>
</li>
</ul>
<script type="text/javascript">
YAHOO.util.Event.addListener(window, "load", function() {
var tree = new YAHOO.widget.TreeView("page-tree");
tree.getRoot().expandAll();
tree.render();
});
</script>
